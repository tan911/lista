<div class="flex items-center justify-center mt-12 sm:mt-8 md:mt-4">
    <main id="auth-page" class="mx-auto w-full max-w-[450px]">
        <h1 class="text-center text-xl font-bold tracking-tight sm:text-left">Log in account</h1>
        <p class="mb-8 text-center text-base font-normal sm:text-left">
            Don't have an account?
            <a href="/web/auth/signup" class="underline underline-offset-2">Sign up.</a>
        </p>
        <form
            data-controller="signin"
            data-signin-auth-message-outlet=".auth-status-message"
            data-signin-loading-class="animate-spin text-white w-5 h-5 cursor-busy"
        >
            <div class="mb-4 space-y-2">
                <label for="email" class="text-sm text-slate-11 text-sm">Email</label>
                <input
                    id="email"
                    type="text"
                    name="email"
                    required
                    placeholder="your@email.com"
                    class="auth-ring-input shadow-sm h-9 w-full text-base rounded-md px-3 py-1 border transition ease-in-out duration-200 outline-none placeholder:text-sm sm:text-sm disabled:opacity-75 disabled:cursor-not-allowed"
                />
            </div>
            <div class="mb-6 space-y-2">
                <div class="flex flex-row justify-between">
                    <label for="password" class="text-sm text-slate-11 text-sm">Password</label>
                    <a
                        class="text-sm underline underline-offset-2"
                        tabindex="-1"
                        href="/web/auth/reset-password"
                        >Forgot your password?</a
                    >
                </div>
                <input
                    id="password"
                    name="password"
                    type="password"
                    required
                    placeholder="••••••••••••"
                    class="auth-ring-input shadow-sm h-9 w-full text-base rounded-md px-3 py-1 border transition ease-in-out duration-200 outline-none placeholder:text-sm sm:text-sm disabled:opacity-75 disabled:cursor-not-allowed"
                />
            </div>
            <button
                data-action="signin#submit"
                type="submit"
                class="h-10 text-sm px-4 py-2 rounded-md font-semibold inline-flex gap-2 items-center justify-center whitespace-nowrap w-full block bg-stone-900 text-white cursor-pointer disabled:cursor-not-allowed hover:bg-stone-800 disabled:opacity-75"
            >
                <i data-lucide="loader-circle" id="lucide-icon" class="hidden"></i>
                <span>Continue</span>
            </button>
        </form>
        <div class="my-6 flex items-center justify-center">
