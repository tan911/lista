{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "lib": ["dom"]
    },
    "include": ["src/**/*.ts", "lib/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
