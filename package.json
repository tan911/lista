{
    "name": "lista",
    "version": "1.0.0",
    "main": "dist/src/server.js",
    "private": "true",
    "scripts": {
        "test": "vitest run",
        "build": "pnpm build:server && pnpm build:client",
        "start": "node dist/src/server.js",
        "dev": "conc \"tsx --watch src/server.ts\" \"pnpm build:client\" \"pnpm build:server --watch\"",
        "clean": "rm -rf node_modules && rm -rf dist",
        "lint": "tsc --noEmit && eslint src/**/*.ts --fix",
        "format": "prettier . --write",
        "build:server": "tsup --tsconfig tsconfig.json",
        "build:client": "conc \"webpack\" \"tailwindcss -i src/public/stylesheets/input.css -o dist/src/public/stylesheets/output.css -w\"",
        "db:generate": "prisma generate",
        "db:seed": "prisma db seed",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma db studio",
        "prepare": "husky"
    },
    "author": "Jovan Lanutan <jolanutan@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@lucia-auth/adapter-prisma": "^4.0.1",
        "@node-rs/argon2": "^1.8.3",
        "@prisma/client": "^5.15.0",
        "axios": "^1.7.2",
        "cors": "^2.8.5",
        "d3": "^7.9.0",
        "debounce": "^2.1.0",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "lucia": "^3.2.0",
        "lucide-static": "^0.399.0",
        "morgan": "^1.10.0",
        "oslo": "^1.2.1",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@faker-js/faker": "^8.4.1",
        "@types/cors": "^2.8.17",
        "@types/d3": "^7.4.3",
        "@types/express": "^4.17.21",
        "@types/module-alias": "^2.0.4",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.2",
        "@types/webpack": "^5.28.5",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^12.0.2",
        "eslint": "^9.5.0",
        "globals": "^15.6.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "module-alias": "^2.2.3",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.1",
        "prisma": "^5.15.0",
        "tailwindcss": "^3.4.4",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.1.0",
        "tsx": "^4.16.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.14.1",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.2",
        "webpack": "^5.93.0",
        "webpack-cli": "^5.1.4"
    },
    "prisma": {
        "seed": "ts-node --transpile-only db/seed.ts",
        "schema": "db/prisma/schema.prisma"
    },
    "tsup": {
        "entry": {
            "server": "src/server.ts"
        },
        "splitting": false,
        "outDir": "dist/src",
        "bundle": true,
        "clean": true,
        "minify": true,
        "sourcemap": true,
        "treeshake": true,
        "format": [
            "cjs"
        ]
    },
    "lint-staged": {
        "(src|lib)**/*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{ts,js,css,md}": [
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "_moduleAliases": {
        "@config": "src/config",
        "@controllers": "src/controllers",
        "@middlewares": "src/middlewares",
        "@models": "src/models",
        "@routes": "src/routes",
        "@utils": "src/utils",
        "@lib": "lib",
        "@db": "db"
    }
}
