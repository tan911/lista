{
    "name": "lista",
    "version": "1.0.0",
    "description": "Credit Management Application",
    "main": "dist/src/server.js",
    "scripts": {
        "build": "pnpm build:ts && pnpm build:css",
        "start": "node dist/src/server.js",
        "dev": "conc \"nodemon src/server.ts public/js/index.ts\" \"rm -rf dist && cp -r public/assets/ dist\" \"pnpm build:css -w\" \"pnpm build:ts --watch\"",
        "clean": "rm -rf node_modules && rm -rf dist",
        "lint": "tsc --noEmit && eslint src/**/*.ts --fix",
        "format": "prettier . --write",
        "build:ts": "tsup",
        "build:css": "tailwindcss -i public/css/input.css -o dist/public/css/output.css",
        "db:generate": "prisma generate",
        "db:seed": "prisma db seed",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma db studio"
    },
    "author": "Jovan Lanutan <jolanutan@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@auth/express": "^0.5.5",
        "@prisma/client": "^5.15.0",
        "cors": "^2.8.5",
        "d3": "^7.9.0",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "morgan": "^1.10.0",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@faker-js/faker": "^8.4.1",
        "@types/cors": "^2.8.17",
        "@types/d3": "^7.4.3",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.2",
        "@types/pug": "^2.0.10",
        "concurrently": "^8.2.2",
        "eslint": "^9.5.0",
        "globals": "^15.6.0",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.1",
        "prisma": "^5.15.0",
        "tailwindcss": "^3.4.4",
        "ts-node": "^10.9.2",
        "tsup": "^8.1.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.13.1"
    },
    "prisma": {
        "seed": "ts-node --transpile-only db/seed.ts",
        "schema": "db/prisma/schema.prisma"
    },
    "tsup": {
        "entry": [
            "src/server.ts",
            "public/js/index.ts"
        ],
        "splitting": false,
        "outDir": "dist",
        "bundle": true,
        "minify": true,
        "sourcemap": true
    }
}
