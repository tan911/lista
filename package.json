{
    "name": "lista",
    "version": "1.0.0",
    "main": "dist/src/server.js",
    "private": "true",
    "scripts": {
        "test": "jest",
        "build": "pnpm build:ts && pnpm build:css && pnpm copy:views",
        "start": "node dist/src/server.js",
        "dev": "conc \"tsx --watch src/server.ts src/public/javascripts/index.ts\" \"pnpm copy:assets\" \"pnpm build:css -w\" \"pnpm build:ts --watch\"",
        "clean": "rm -rf node_modules && rm -rf dist",
        "lint": "tsc --noEmit && eslint src/**/*.ts --fix",
        "format": "prettier . --write",
        "build:ts": "tsup --tsconfig tsconfig.json",
        "build:css": "tailwindcss -i src/public/stylesheets/input.css -o dist/src/public/stylesheets/output.css",
        "copy:assets": "rm -rf dist/src/public/assets && cp -r src/public/assets dist/src/public/assets",
        "copy:views": "cp -r src/views dist/src/views/",
        "db:generate": "prisma generate",
        "db:seed": "prisma db seed",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma db studio",
        "prepare": "husky"
    },
    "author": "Jovan Lanutan <jolanutan@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "@lucia-auth/adapter-prisma": "^4.0.1",
        "@prisma/client": "^5.15.0",
        "axios": "^1.7.2",
        "cors": "^2.8.5",
        "d3": "^7.9.0",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "lucia": "^3.2.0",
        "lucide-static": "^0.399.0",
        "morgan": "^1.10.0",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@faker-js/faker": "^8.4.1",
        "@types/cors": "^2.8.17",
        "@types/d3": "^7.4.3",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.2",
        "concurrently": "^8.2.2",
        "eslint": "^9.5.0",
        "globals": "^15.6.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.1",
        "prisma": "^5.15.0",
        "tailwindcss": "^3.4.4",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "tsup": "^8.1.0",
        "tsx": "^4.16.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.14.1"
    },
    "prisma": {
        "seed": "ts-node --transpile-only db/seed.ts",
        "schema": "db/prisma/schema.prisma"
    },
    "tsup": {
        "entry": {
            "server": "src/server.ts",
            "public/javascripts/bundle": "src/public/javascripts/index.ts"
        },
        "splitting": false,
        "outDir": "dist/src",
        "bundle": true,
        "minify": true,
        "sourcemap": true,
        "treeshake": true,
        "format": [
            "cjs",
            "iife"
        ]
    },
    "lint-staged": {
        "(src|lib)**/*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{ts,js,css,md}": [
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
